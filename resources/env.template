# Design-to-Code Workshop Environment Variables
# Copy this file to .env and fill in your values

# Azure AI Services (Required for Module 5)
AZURE_CV_ENDPOINT=https://your-resource.cognitiveservices.azure.com/
AZURE_CV_KEY=your-computer-vision-key
AZURE_FR_ENDPOINT=https://your-resource.cognitiveservices.azure.com/
AZURE_FR_KEY=your-form-recognizer-key
AZURE_OPENAI_ENDPOINT=https://your-resource.openai.azure.com/
AZURE_OPENAI_KEY=your-openai-key
AZURE_OPENAI_DEPLOYMENT=gpt-4
AZURE_OPENAI_API_VERSION=2023-12-01-preview

# Figma API (Required for Module 3-4)
FIGMA_API_TOKEN=your-figma-personal-access-token
FIGMA_FILE_KEY=your-figma-file-key

# GitHub Integration (Required for Module 4)
GITHUB_TOKEN=your-github-personal-access-token
GITHUB_OWNER=your-github-username
GITHUB_REPO=your-repo-name
GITHUB_WORKFLOW_TOKEN=your-workflow-token

# MCP Server Configuration
MCP_AUTH_TOKEN=your-mcp-auth-token
MCP_SERVER_URL=http://localhost:3000
MCP_SERVER_PORT=3000

# Database/Cache
REDIS_URL=redis://localhost:6379
DATABASE_URL=postgresql://user:password@localhost:5432/design-to-code

# Application Settings
NODE_ENV=development
APP_PORT=3000
LOG_LEVEL=info

# Feature Flags
ENABLE_AI_ANALYSIS=true
ENABLE_AUTO_PR=true
ENABLE_DESIGN_CACHE=true
ENABLE_NOTIFICATIONS=false

# Component Generation Settings
DEFAULT_FRAMEWORK=react
DEFAULT_LANGUAGE=typescript
DEFAULT_STYLING=styled-components
GENERATE_TESTS=true
GENERATE_STORIES=true
GENERATE_DOCS=true

# External Services (Optional)
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SENTRY_DSN=https://your-sentry-dsn@sentry.io/project-id
AMPLITUDE_API_KEY=your-amplitude-key

# Development Tools
STORYBOOK_PORT=6006
VITE_PORT=5173
DOCS_PORT=3001

# Security
JWT_SECRET=your-jwt-secret-key
ENCRYPTION_KEY=your-encryption-key
SESSION_SECRET=your-session-secret 