# Design-to-Code Workshop - Environment Configuration Template
# Copy this file to .env and fill in your Azure service credentials
# Generated by: 01-azure-setup.sh

# =============================================================================
# Azure Subscription and Resource Group
# =============================================================================
AZURE_SUBSCRIPTION_ID=your-subscription-id-here
RESOURCE_GROUP=design-to-code-workshop
AZURE_REGION=eastus

# =============================================================================
# Azure Computer Vision Service
# =============================================================================
# Computer Vision endpoint and authentication key
AZURE_CV_ENDPOINT=https://design-vision-service.cognitiveservices.azure.com/
AZURE_CV_KEY=your-computer-vision-key-here
AZURE_CV_REGION=eastus

# Alternative naming (for compatibility)
CV_ENDPOINT=https://design-vision-service.cognitiveservices.azure.com/
CV_KEY=your-computer-vision-key-here

# =============================================================================
# Azure Form Recognizer Service
# =============================================================================
# Form Recognizer endpoint and authentication key
AZURE_FR_ENDPOINT=https://design-form-recognizer.cognitiveservices.azure.com/
AZURE_FR_KEY=your-form-recognizer-key-here
AZURE_FR_REGION=eastus

# Alternative naming (for compatibility)
FR_ENDPOINT=https://design-form-recognizer.cognitiveservices.azure.com/
FR_KEY=your-form-recognizer-key-here

# =============================================================================
# Azure OpenAI Service (Primary Option)
# =============================================================================
# Azure OpenAI endpoint and authentication
AZURE_OPENAI_ENDPOINT=https://design-openai-service.openai.azure.com/
AZURE_OPENAI_KEY=your-azure-openai-key-here
AZURE_OPENAI_API_VERSION=2024-02-15-preview
OPENAI_DEPLOYMENT_NAME=gpt-4-vision-preview

# Alternative naming (for compatibility)
OPENAI_ENDPOINT=https://design-openai-service.openai.azure.com/
OPENAI_KEY=your-azure-openai-key-here

# =============================================================================
# OpenAI API (Fallback Option)
# =============================================================================
# If you don't have Azure OpenAI access, use regular OpenAI API
# OPENAI_API_KEY=your-openai-api-key-here
# OPENAI_ORG_ID=your-openai-org-id-here

# =============================================================================
# Azure Key Vault (for secure credential storage)
# =============================================================================
KEYVAULT_NAME=dtc-keyvault-timestamp
KEYVAULT_URL=https://dtc-keyvault-timestamp.vault.azure.net/

# =============================================================================
# Workshop Configuration
# =============================================================================
# Default settings for the workshop
WORKSHOP_MODE=development
LOG_LEVEL=info
MAX_IMAGE_SIZE=10485760
SUPPORTED_FORMATS=png,jpg,jpeg,gif,bmp,webp

# =============================================================================
# GitHub Integration (for advanced workshops)
# =============================================================================
# GITHUB_TOKEN=your-github-personal-access-token
# GITHUB_COPILOT_ENABLED=true

# =============================================================================
# Figma Integration (for advanced workshops)
# =============================================================================
# FIGMA_ACCESS_TOKEN=your-figma-access-token
# FIGMA_FILE_ID=your-figma-file-id

# =============================================================================
# Development and Testing
# =============================================================================
# Enable debug mode for detailed logging
DEBUG=false
NODE_ENV=development

# Test image URLs for connection testing
TEST_IMAGE_URL=https://raw.githubusercontent.com/Azure-Samples/cognitive-services-sample-data-files/master/ComputerVision/Images/landmark.jpg
TEST_DOCUMENT_URL=https://raw.githubusercontent.com/Azure-Samples/cognitive-services-REST-api-samples/master/curl/form-recognizer/sample-layout.pdf

# =============================================================================
# Security Settings
# =============================================================================
# Enable secure credential storage in Key Vault
USE_KEYVAULT=true
AUTO_ROTATE_KEYS=false

# =============================================================================
# Performance and Rate Limiting
# =============================================================================
# API rate limiting settings
MAX_REQUESTS_PER_MINUTE=60
REQUEST_TIMEOUT_MS=30000
RETRY_ATTEMPTS=3
RETRY_DELAY_MS=1000

# =============================================================================
# Output Configuration
# =============================================================================
# Generated code output settings
OUTPUT_FRAMEWORK=react
OUTPUT_TYPESCRIPT=true
OUTPUT_STYLED_COMPONENTS=false
OUTPUT_CSS_MODULES=false

# =============================================================================
# Cache Configuration
# =============================================================================
# Enable caching for API responses
ENABLE_CACHE=true
CACHE_TTL_SECONDS=3600
CACHE_MAX_SIZE=100

# =============================================================================
# Monitoring and Analytics
# =============================================================================
# Enable telemetry and performance monitoring
ENABLE_TELEMETRY=false
ANALYTICS_ENDPOINT=
APPLICATION_INSIGHTS_KEY=

# =============================================================================
# IMPORTANT SECURITY NOTES
# =============================================================================
# 1. Never commit the .env file to version control
# 2. Keep your API keys secure and rotate them regularly  
# 3. Use Azure Key Vault for production deployments
# 4. Monitor your Azure usage to avoid unexpected charges
# 5. Set up billing alerts in your Azure subscription